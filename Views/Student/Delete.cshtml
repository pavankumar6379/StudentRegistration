@model StudentRegistration.Models.StudentModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5" style="max-width: 600px;">
    <h1 class="mb-4 text-center text-danger">Delete Student</h1>

    <h3 class="mb-4 text-center">Are you sure you want to delete this?</h3>

    <div class="bg-light p-4 rounded shadow-sm">
        <h4 class="mb-3">Student Information</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Age)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Age)</dd>

            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.EnrollmentDate)</dd>

            @* Uncomment if you want to show IsActive
            <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.IsActive)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>
            *@
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4 text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
